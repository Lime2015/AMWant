<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_mypage_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/ic_table"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/table_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ic_table"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/app_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table_name"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/ic_table" />

        <TextView
            android:id="@+id/server_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table_name"
            android:layout_toRightOf="@+id/app_tag" />

        <ImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter" />


        <!--<ProgressBar-->
            <!--android:id="@+id/prog_data"-->
            <!--style="?android:attr/progressBarStyleHorizontal"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="4dp"-->
            <!--android:layout_below="@+id/app_tag"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginBottom="0dp"-->
            <!--android:max="100"-->
            <!--android:paddingLeft="3dp"-->
            <!--android:paddingRight="3dp" />-->

    </RelativeLayout>

</android.support.v7.widget.CardView>

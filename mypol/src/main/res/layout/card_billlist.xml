<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_bill"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <!--<ImageView-->
            <!--android:id="@+id/bill_photo"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="30dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:scaleType="fitCenter" />-->

        <LinearLayout
            android:id="@+id/linear_vote"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_like"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/like" />

                <TextView
                    android:id="@+id/count_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_toLeftOf="@+id/ic_dislike"
                    android:text="0"
                    android:textColor="#ff2771c3"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_dislike"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dislike" />

                <TextView
                    android:id="@+id/count_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FF0202"
                    android:textSize="10sp" />

            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rela_name"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/linear_vote">

            <TextView
                android:id="@+id/bill_committee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="법사위"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/bill_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bill_committee_name"
                android:text="국회법 개정안"
                android:textSize="16sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/bill_statue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bill_date"
                android:layout_alignParentRight="true"
                android:text="통과"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/bill_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="2015.07.24"
                android:textSize="10sp" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>